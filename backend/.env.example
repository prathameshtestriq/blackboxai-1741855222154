# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cricket-stock-exchange

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Email Configuration (using MailHog for development)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=Cricket Stock Exchange <noreply@cricketstockexchange.com>

# Client URL (for email verification and password reset)
CLIENT_URL=http://localhost:3000

# Payment Gateway Configuration (placeholder)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret
PAYMENT_ENVIRONMENT=sandbox

# Socket Configuration
SOCKET_CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Logging
LOG_LEVEL=debug

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@cricketstockexchange.com
ADMIN_PASSWORD=Admin123!@#

# Market Hours (UTC)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=16
MARKET_CLOSE_MINUTE=0

# Trading Limits
MAX_STOCK_QUANTITY_PER_TRADE=1000
MIN_STOCK_QUANTITY_PER_TRADE=1
MAX_DAILY_TRADING_VOLUME=10000

# Wallet Limits
MAX_DAILY_DEPOSIT=50000
MAX_DAILY_WITHDRAWAL=25000
MIN_DEPOSIT_AMOUNT=100
MIN_WITHDRAWAL_AMOUNT=100
