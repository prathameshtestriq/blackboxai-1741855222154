# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cricket-stock-exchange

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Email Configuration (using Gmail as an example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=Cricket Stock Exchange <noreply@cricketstockexchange.com>

# Client URL
CLIENT_URL=http://localhost:3000

# Payment Gateway Configuration (placeholder)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret
PAYMENT_ENVIRONMENT=sandbox

# Socket Configuration
SOCKET_CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Logging
LOG_LEVEL=debug
